package main.interfaces;

public abstract class Page {

	public enum Type{PRODUCT, CATEGORY, SPECIAL};
	
	private String rawName;
	private String adjName;
	
	private String location;
	
	private Type pageType;
	
	
	public Page(String rawName, String location, Type pageType){
		this.rawName = rawName;
		this.adjName = nameConvert(rawName);
		
		this.location = location;
		
		this.pageType = pageType;
	}
	
	public Page(String rawName, String adjName, String location, Type pageType){
		this.rawName = rawName;
		this.adjName = adjName;
		
		this.location = location;
		
		this.pageType = pageType;
	}
	
	
	public String getHTML(){
		return getHead() + getTop() + getContent() + getFooter();
	}
	
	private String getHead(){
		String pageTitle;
		if(rawName.equals("index")){name = "marzipops";}else{name = "marzipops: " + getTextName();}
		String write = "<!doctype html><html>";
		write += "<head>";
		write += "<title>" + name + "</title>";
		write += "<meta name='p:domain_verify' content='b556a9473bc0ff0cfd08b0608c15ffa3'/>";
		write += "<link rel='stylesheet' type='text/css' href='" + getAdd() + "Foundation/css/foundation.css'></link>";
		write += "<link rel='stylesheet' type='text/css' href='" + getAdd() + "Foundation/css/style.css'></link>";
		write += "<script src='" + getAdd() + "Javascript/Javascript.js'></script>";
		write += "<script src='" + getAdd() + "Javascript/Lists.js'></script>";
		write += "<script src='" + getAdd() + "Javascript/Search.js'></script>";
		write += "</head>";
		write += "<body onload='javascript(\"" + getLinkName() + "\", \"" + getAdd() + "\", " + (getType() == Type.PRODUCT) + ")'>";
		
		//Website Wrapper
		write += "<div id='full' style='visibility: hidden;'>";	

		return write;
	}
	
}
