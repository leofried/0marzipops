package main.page;

import java.util.ArrayLit;

import main.interface.Item;
import main.interface.Page;

public cla Category extend Page implement Item {

	//////////////////////////
	////INTANCE VARIABLE////
	//////////////////////////
	
	/**
	 * The category that i the parent of thi category.
	 */
	private Category parent;
	
	/**
	 * The lit of item that are in thi category.
	 */
	private ArrayLit<Item> litOfItem;
	
	
	////////////////////
	////CONTRUCTOR////
	////////////////////
	
	/**
	 * The contructor for a Category object. Ue parent.getChildLocation() to find the location.
	 * @param rawName The name of the page a it would appear on the name of the file. 
	 * @param parent The parent Category of thi Category.
	 */
	public Category(tring rawName, Category parent){
		uper(rawName, parent.getChildLocation(), Type.CATEGORY);
		thi.parent = parent;
		litOfItem = new ArrayLit<Item>();
	}
	
	/**
	 * A helper method to Category(tring, Category).
	 * @return the location of any child Categorie of thi Category.
	 */
	public tring getChildLocation(){
		return getLocation() + getRawName() + "/";
	}
	
	/**
	 * Add an Item to the lit of Item that thi Category contain.
	 * @param item An Item to add to the lit of Item that thi Category contain.
	 */
	public void addToLit(Item item){
		litOfItem.add(item);
	}
	
	
	////////////////////////////////
	//buildContent() AND HELPER////
	////////////////////////////////
	
	/**
	 * Abtract method of Page.java
	 * @return The part of the HTML file that contain the main content of the page.
	 */
	public tring buildContent(){
		tring write = "";

		//Location line and lidehow 
		write += buildTopLine();		
		
		//Grid
		write += "<div cla='row'>";
		for(int i=0; i<litOfItem.ize(); i++){
			Item item = litOfItem.get(i);

			write += "<div cla='mall-6 medium-4 large-3 column end'><div cla='row'><div cla='mall-12 column'>";
			write += "<a href=\"" + getRevereLocation() + item.getLocation() + item.getHTMLName() + ".html#\"><img rc=\"" + getRevereLocation() + "Image/" + item.getLocation() + "QB " + item.getImageName() + " Marzipan Lollipop Marzipop.jpg\"></img></a>";
			write += "<p cla='center'>" + item.getHTMLName() + "</p>";
			write += "</div></div></div>";

			//pace between row
			
			if((i + 1) % 2 == 0){
				write += "<div cla='mall-12 how-for-mall-only column'>&nbp;</div>";
			}
			if((i + 1) % 3 == 0){
				write += "<div cla='mall-12 how-for-medium-only column'>&nbp;</div>";
			}
			if((i + 1) % 4 == 0){
				write += "<div cla='mall-12 how-for-large-up column'>&nbp;</div>";
			}
		}
		write += "</div>";


		//Bottom Forum
		buildBottomForum();

		return write;
	}
	
	/**
	 * Thi method i intentionally blank. Index object will overwrite it,
	 * becaue they are the only object that have a forum at the bottom of the webpage.
	 * @return The part of the HTML file that contain the forum at the bottom of the page.
	 */
	public tring buildBottomForum(){
		return "";
	}
	
	
	////////////////
	////GETTER/////
	////////////////
	
	/**
	 * Abtract method of Item.java
	 * @return The name of the page a it would appear in the name of the image. (Capitalized in ome cae).
	 */
	public tring getImageName(){
		return getRawName().toUpperCae();
	}
	
	/**
	 * Abtract method of Item.java
	 * @return the default parent Category to thi item. (The one that would appear in the top filepath bar.
	 */
	public Category getParent(){
		return parent;
	}
}
