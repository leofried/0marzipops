package main.pages.speicals;

import main.pages.Special;

public class Contact extends Special{	
	
	/**
	 * Constructor for an Contact object.
	 */
	public Contact (){
		super("Contact");
	}
	
	/**
	 * Abstract method of Page.java
	 * @return The part of the HTML file that contains the main content of the page.
	 */
	public String buildContent(){
		String write = buildBlueLine();
		
		String[] img = {"Pinterest",  "Instagram", "Twitter", "Facebook"};
		write += "<div class='row'><div class='small-12 small-centered columns'><p id='Reach' class='center fontSixteen'>";
		write += "We want to hear from you!<br>hello@marzipops.com<br>(917)&nbsp658&ndash;0726</p></div></div>";
	
		write += "<div class='row'><div class='small-10 medium-6 large-4 small-centered columns'><div class='row'>";
			for(int i=0; i<img.length; i++){
				write +=  "<div class='small-3 columns'><a href='http://www." + img[i] + ".com/marzipops' target='_blank'><img src='Images/Social Media/" + img[i] + ".jpg'></img></a></div>";
			}
		write += "</div></div></div><br>";
		
		if(type == 0){
			write += "<div class='row' id='Feedback'>";
				write += "<div class='small-12 medium-8 small-centered columns'><div class='row'>";
					write += "<div class='small-12 columns'><form action='//formspree.io/" + Constants.EMAIL + "' method='POST' name='emailList1' onSubmit='return emailList(true)'>";
						write += "<p>Stay up to date: sign up for sweet and special offers!</p>";
						write += "<input type='text' name='email' placeholder='Email'>";
						write += "<input type='hidden' name='_subject' value='For Email List'>";
						write += "<input type='hidden' name='_next' value='ContactSignedUp1'>";
					write += "<button type='submit' id='contactButton' class='backBlue'><p class='fontWhite'>Send</p></button></form></div>";
					write += "<div class='small-12 columns'>" + Constants.BLANK + "</div>";
					write += "<div class='small-12 columns'><p>Send us a note!</p></div>";
					write += buildForm("ContactSignedUp2");
				write += "</div>";
			write += "</div>";
			return write;
		}else if(type == 1){
			write += "<p class='center'>Sweet, you're on the list!</p>";
		}else{
			write += "<p class='center'>Thanks for contacting us! We will get in touch with you shortly.</p>";
		}
		return write;
	}
}
